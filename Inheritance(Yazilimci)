public class Yazilimci extends Calisan {
	
	private String diller;
	
	public Yazilimci(String ad,String soyad,int id,String diller)
	{
		super(ad,soyad,id);
		this.diller=diller;
	}

	public String getDiller() {
		return diller;
	}

	public void setDiller(String diller) {
		this.diller = diller;
	}
	
	public void formatAt(String isletimSistemi)
	{
		System.out.println(getAd()+ isletimSistemi +"   isletim sistemini yukluyor");
	}

	@Override
	public void BilgileriGoster() {
		
		super.BilgileriGoster();
		System.out.println("Hakim oldugu diller:  "+diller);
	}
	

}
